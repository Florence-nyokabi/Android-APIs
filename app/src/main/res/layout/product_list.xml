<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/tvProductTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="ProductTitle"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tvProductStock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvProductId"
            app:layout_constraintTop_toBottomOf="@+id/ivThumbnail" />

        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="55dp"
            android:text="Product Description"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/tvProductStock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductId" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="135dp"
            android:layout_height="53dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="8dp"
            android:text="Price"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCategory"
            app:layout_constraintTop_toBottomOf="@+id/tvProductStock" />

        <TextView
            android:id="@+id/tvProductStock"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="8dp"
            android:text="Stock"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvProductDescription"
            app:layout_constraintTop_toBottomOf="@+id/tvProductTitle" />

        <TextView
            android:id="@+id/tvRatings"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="90dp"
            android:text="Ratings"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvProductPrice"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="8dp"
            android:text="Category"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tvRatings"
            app:layout_constraintEnd_toStartOf="@+id/tvProductPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductDescription" />

        <TextView
            android:id="@+id/tvProductId"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="8dp"
            android:text="Product Id"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tvProductDescription"
            app:layout_constraintEnd_toStartOf="@+id/tvProductTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivThumbnail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>